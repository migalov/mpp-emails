---
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Space from "../components/Space.astro";
import H2 from "../components/Typography/H2.astro";
import P from "../components/Typography/P.astro"
import CardPage from "../sections/CardPage.astro";
import FAQ from "../sections/FAQ.astro";
import Preheader from "../components/Preheader.astro";
import H1 from "../components/Typography/H1.astro";
import TextRow from "../components/TextRow.astro";
import BaseLayout from "../layout.astro";
---

<BaseLayout>
    <!-- Прехедер -->
    <Preheader>
    </Preheader>
